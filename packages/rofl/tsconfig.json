{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022", "DOM"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": ["*.ts", "src/**/*"],
    "exclude": ["node_modules", "dist"]
}
